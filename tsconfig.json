{
  "compilerOptions": {
    "lib": ["ES6"],
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "target": "es6",
    "outDir": "dist"
  },
  "include": ["lib/**/*.js", "test/**/*.js", "index.js"],
  "exclude": ["node_modules"]
}
